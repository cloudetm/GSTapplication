<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_gravity="center_horizontal">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/own_believe_make_wrap"
            >
        <ImageView
            android:id="@+id/android_header"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/android_framework"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <View
            android:layout_below="@id/own_believe_make_wrap"
            android:layout_width="fill_parent"
            android:id="@+id/shadow"
            android:layout_height="5dip"
            android:background="@drawable/drop_shadow"
            >
        </View>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shadow"
            >

            <ImageView
                android:id="@+id/android_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/android_logo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/string_android_framework_desc"
                android:id="@+id/android_desc"
                android:layout_below="@+id/android_logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/string_android"
                android:id="@+id/android_title"
                android:layout_marginBottom="27dp"
                android:layout_marginLeft="30dp"
                android:layout_alignBottom="@+id/android_logo"
                android:layout_toRightOf="@+id/android_logo"
                android:layout_toEndOf="@+id/android_logo" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/qt_logo"
                android:src="@drawable/qt_logo"
                android:layout_below="@+id/android_desc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/string_qt"
                android:id="@+id/qt_title"
                android:layout_alignBottom="@+id/qt_logo"
                android:layout_toRightOf="@+id/qt_logo"
                android:layout_toEndOf="@+id/qt_logo"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="31dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/string_qt_framework_desc"
                android:id="@+id/qt_des"
                android:layout_below="@+id/qt_logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/dot_net_logo"
                android:layout_below="@+id/qt_des"
                android:src="@drawable/net_logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/string_dot_net"
                android:id="@+id/dot_net_title"
                android:layout_alignBottom="@+id/dot_net_logo"
                android:layout_alignLeft="@+id/qt_title"
                android:layout_alignStart="@+id/qt_title"
                android:layout_marginBottom="29dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/string_dot_net_framework_desc"
                android:id="@+id/dot_net_desc"
                android:layout_below="@+id/dot_net_logo"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentStart="true" />

        </RelativeLayout >
    </RelativeLayout >
</ScrollView>